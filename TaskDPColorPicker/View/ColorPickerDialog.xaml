<Window x:Class="TaskDPColorPicker.View.ColorPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выберите цвет" Height="200" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Введите цвет в формате HEX:" />
        <TextBox x:Name="TextBoxColor" />
        <Button Content="OK" Click="OkButton_Click" Margin="0,10" />
    </StackPanel>
</Window>